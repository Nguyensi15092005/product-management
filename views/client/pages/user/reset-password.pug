extends ../../layout/default.pug
include ../../mixins/alert.pug


block main
  +alert-error(3000)
  .container.my-5
    .row.justify-content-center
      .col-8 
        h2(class="text-center") Đặt lại mật khẩu
        form(
          action="/user/password/reset"
          method="POST"
        )
          div(class="form-group")
            label(for="password") Mật khẩu
            input(
              type="password"
              name="password"
              id="password"
              class="form-control"
              required 
            ) 
          div(class="form-group")
            label(for="comfirmpassword") Nhập lại mật khẩu 
            input(
              type="password"
              name="comfirmpassword"
              id="comfirmpassword"
              class="form-control"
              required 
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-success form-control"
            ) Đổi Mật khẩu


extends ../../layout/default.pug
include ../../mixins/alert.pug


block main
  +alert-error(3000)
  .container.my-5
    .row.justify-content-center
      .col-8 
        h2(class="text-center") Nhập mã OTP để xác nhận 
        form(
          action="/user/password/otp"
          method="POST"
        )
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              name="email"
              id="email"
              class="form-control"
              required 
              value=email
              readonly
            ) 
          div(class="form-group")
            label(for="otp") Mã OTP  
            input(
              type="text"
              name="otp"
              id="otp"
              class="form-control"
              required 
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-success form-control"
            ) Xác thực


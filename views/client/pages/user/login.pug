extends ../../layout/default.pug
include ../../mixins/alert.pug


block main
  +alert-error(3000)
  .container.my-5
    .row.justify-content-center
      .col-8 
        h2(class="text-center") Đăng nhập tài khoản
        form(
          action="/user/login"
          method="POST"
        )
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              name="email"
              id="email"
              class="form-control"
              required 
            ) 
          div(class="form-group")
            label(for="password") Mật khẩu  
            input(
              type="password"
              name="password"
              id="password"
              class="form-control"
              required 
            )
          a(href="/user/password/forgot") Quên mật khẩu 
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-success form-control"
            ) Đăng nhập


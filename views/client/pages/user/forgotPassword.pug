extends ../../layout/default.pug
include ../../mixins/alert.pug


block main
  +alert-error(3000)
  .container.my-5
    .row.justify-content-center
      .col-5.background_user  
        h2(class="text-center") Nhập Email để xác thực
        form(
          action="/user/password/forgot"
          method="POST"
        )
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              name="email"
              id="email"
              class="form-control"
              required 
            ) 
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-success form-control"
            ) Gửi mã xác nhận


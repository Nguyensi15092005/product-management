extends ../../layout/default.pug
include ../../mixins/box-head.pug

block main
  .section-products-featured.my-5
    .container.my-3
      include ../../partials/list-btn-user.pug
      .row 
        .col-12 
          +box-head("Danh sách người dùng")
    
      .row(data-users-not-friend=user.id) 
        each user in users
          .col-6(user-id=user.id)
            div(class="box-user")
              div(class="inner-avt")
                img(
                  src=user.avatar ? user.avatar : "/img/avtUserSocket.png"
                  alt=user.fullName
                )

              div(class="inner-info")
                div(class="inner-name") #{user.fullName}
                div(class="inner-btn")
                  button(
                    class="btn btn-sm btn-primary mr-1"
                    btn-add-friend=user.id
                  ) Kết bạn 
                  button(
                    class="btn btn-sm btn-secondary mr-1"
                    btn-cancel-friend=user.id
                  ) Hủy kết bạn 
block script 
  script(src="/js/userSocket.js")
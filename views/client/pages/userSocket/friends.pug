extends ../../layout/default.pug
include ../../mixins/box-head.pug

block main
  .section-products-featured.my-5
    .container.my-3
      include ../../partials/list-btn-user.pug
      .row 
        .col-12 
          +box-head("Danh sách bạn bè")
      
      .row(data-users-friend=user.id) 
        each user in users
          .col-6(user-id=user.id) 
            div(class="box-user")
              div(class="inner-avt")
                img(
                  src=user.avatar ? user.avatar : "/img/avtUserSocket.png"
                  alt=user.fullName
                )

              div(class="inner-info")
                div(class="inner-name") #{user.fullName}
                div(class="inner-btn")
                  a(
                    href=`/chat/${user.infoFriend.room_chat_id}`
                    class="btn btn-sm btn-primary mr-1"
                  ) Nhắn tin
                  button(
                    class="btn btn-sm btn-secondary mr-1"
                    btn-refuse-friend=user.id
                  ) Hủy KB
              div(
                class="inner-status"
                status=user.statusOnline
              ) <i class="fa-solid fa-circle"></i> 
block script 
  script(src="/js/userSocket.js")

extends ../../layout/default.pug
include ../../mixins/box-head.pug

block main
  .section-products-featured.my-5
    .container.my-3
      .row 
        .col-12 
          +box-head("Danh sách phòng chát")

      .row.mb-3 
        .col-12 
          a(
            href="/rooms-chat/create"
            class="btn btn-success"
          ) Tạo phòng chát

      .row 
        each room in roomschat
          .col-6 
            div(class="box-room")
              div(class="inner-avt")
                img(src=room.avatar ? room.avatar : "/img/avtUserSocket.png", alt="")
              div(class="inner-info")
                div(class="inner-name") #{room.title} 
                div(class="inner-btn")
                  a(
                    href=`/chat/${room.id}`
                    class="btn btn-primary btn-sm"
                  ) Nhắn tin


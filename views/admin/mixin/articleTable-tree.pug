include ./moment.pug

mixin articleTable-tree(items, level = 1)
    each item, index in items
        - const prefix = Array(level + 1).join("-- ")
        tr
            if(role.permissions.includes("articles-category_edit"))
                td 
                    input(
                        type="checkbox"
                        name="id"
                        value=item.id
                    )
            td #{item.index}
            td 
                img(
                    src=item.thumbnail 
                    alt=item.title
                    width="100px" 
                    height="auto"
                )
            td #{prefix} #{item.title}
            td 
                input(
                    type="number"
                    value=item.position 
                    style="width:50px"
                    min="1"
                    name="position"
                )
            td
                if(role.permissions.includes("articles-category_edit"))
                    if(item.status == "active")
                        a(
                            href="javascript:;" 
                            class="badge badge-success"
                            button-change-status 
                            data-status=item.status 
                            data-id=item.id
                        ) Hoạt động
                    else 
                        a(
                            href="javascript:;" 
                            class="badge badge-danger"
                            button-change-status 
                            data-status=item.status 
                            data-id=item.id
                        ) Dừng hoạt động
                else 
                    if(item.status == "active")
                        a(
                            href="" 
                            class="badge badge-success"
                        ) Hoạt động
                    else 
                        a(
                            href="" 
                            class="badge badge-danger"
                        ) Dừng hoạt động

            td 
                p #{item.account_Fullname}
                p 
                    +formatDate(item.createdBy.createdAt)

            td 
                - const updatedBy = item.updatedBy.slice(-1)[0]
                if(updatedBy)
                    p #{updatedBy.account_Fullname}
                    p 
                        +formatDateTime(updatedBy.updatedAt)

            td 
                a(
                    href=`${prefixAdmin}/articles-category/detail/${item.id}`
                    class="btn btn-info"
                ) Chi tiết
                if(role.permissions.includes("articles-category_edit"))
                    a(
                        href=`${prefixAdmin}/articles-category/edit/${item.id}`
                        class="btn btn-warning"
                    ) Sửa
                if(role.permissions.includes("articles-category_delete"))
                    button(
                        class="btn btn-danger"
                        button-delete
                        data-id=item.id
                    ) Xóa
        if item.children && item.children.length > 0
            +articleTable-tree(item.children, level+1)
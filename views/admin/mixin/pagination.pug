mixin pagination(pagination)
    ul(class="pagination")
      li(class="page-item")
        button(
          class="page-link"
          button-page = pagination.currentPage > 0  ? (
            pagination.currentPage - 1
          ):(
            pagination.currentPage 
          )
          ) Trang trước
      - for(let i = 1; i <= pagination.totalPage; i++)
        li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
          button(
            class="page-link"
            button-page = i
            ) #{i}
      li(class="page-item")
        button(
          class="page-link"
          button-page = pagination.currentPage < pagination.totalPage ? (
            pagination.currentPage + 1
          ):(
            pagination.currentPage
          )
          ) kế tiếp 
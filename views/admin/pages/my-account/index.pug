extends ../../layout/default.pug

block main
  h2 Thông tin cá nhân
  if(user.avatar)
    img(src=user.avatar, alt="")
  if(user.fullName)
    div Họ và tên: <b>#{user.fullName}</b>
  if(user.email)
    div Email: <b>#{user.email}</b>
  if(user.phone)
    div Số điện thoại: <b>#{user.phone}</b>
  if(user.status)
    div Trạng thái: 
      if(user.status == "active")
        <span class="badge badge-success">Hoạt động</span>
      else 
        <span class="badge badge-danger">Dừng hoạt động</span>

  if(role.title)
    div Phân quyền: <b>#{role.title}</b>
  
  a(
    href=`${prefixAdmin}/my-account/edit`
    class="btn btn-warning"
  ) Chỉnh sửa

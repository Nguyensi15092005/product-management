extends ../../layout/default.pug
include ../../mixin/filter-status.pug
include ../../mixin/search-form.pug
include ../../mixin/pagination.pug
include ../../mixin/form-change-multi.pug
include ../../mixin/alert.pug
include ../../mixin/sort.pug
include ../../mixin/moment.pug

block main 
  if(role.permissions.includes("articles_view"))

    +alert-success("5000")
    +alert-error("5000")


    h2 Danh sách bài viết

    .card.mb-3 
      .card-header Bộ lọc và tìm kiếm
      .card-body
        .row 
          .col-6
            +filter-Status(filterStatus)
          .col-6 
            +search-form(keyword)

    if(role.permissions.includes("articles_edit"))  
      .card.mb-3 
        .card-header Sắp xếp 
        .card-body 
          .row  
            .col-4 
              +sortArticle()
    
    .card.mb-3 
      .card-header Danh sách
      .card-body
        table(
          class="table table-hover table-sm"
          checkbox-multi
        )
        
          .row  
            .col-8 
              if(role.permissions.includes("articles_edit"))
                +form-change-multi(`${prefixAdmin}/articles/change-multi?_method=PATCH`)
            .col-4
              if(role.permissions.includes("articles_create")) 
                a(
                  href=`${prefixAdmin}/articles/create`
                  class="btn btn-outline-success active"
                ) +Thêm mới

    
            
          thead 
            tr
              if(role.permissions.includes("articles_edit")) 
                th 
                  input(type="checkbox" name="checkall")
              th STT
              th Hình ảnh
              th Tiêu đề
              th Vị trí
              th Trạng thái
              th Người tạo
              th Người cập nhật
              th Hành động
          tbody
            each item, index in articles
              tr
                if(role.permissions.includes("articles_edit"))
                  td 
                    input(
                      type="checkbox"
                      name="id"
                      value=item.id
                    )
                //- td #{pagination.limitItems*(pagination.currentPage-1)+(index+1)}
                td #{index + 1}
                td 
                  img(
                    src=item.thumbnail 
                    alt=item.title
                    width="100px" 
                    height="auto"
                  )
                td #{item.title}
                td 
                  input(
                    type="number"
                    value=item.position 
                    style="width:50px"
                    min="1"
                    name="position"
                    )
                td
                  if(role.permissions.includes("articles_edit"))
                    if(item.status == "active")
                      a(
                        href="javascript:;" 
                        class="badge badge-success"
                        button-change-status 
                        data-status=item.status 
                        data-id=item.id
                      ) Hoạt động
                    else 
                      a(
                        href="javascript:;" 
                        class="badge badge-danger"
                        button-change-status 
                        data-status=item.status 
                        data-id=item.id
                      ) Dừng hoạt động
                  else 
                    if(item.status == "active")
                        a(
                            href="#" 
                            class="badge badge-success"
                        ) Hoạt động
                    else 
                        a(
                            href="#" 
                            class="badge badge-danger"
                        ) Dừng hoạt động

                td 
                  p #{item.account_Fullname}
                  p
                    +formatDate(item.createdBy.createdAt)
                  
                td 
                  - const updatedBy = item.updatedBy.slice(-1)[0]
                  if(updatedBy)
                    p #{updatedBy.account_Fullname}
                    p
                      +formatDate(updatedBy.updatedAt)

                td 
                  a(
                    href=`${prefixAdmin}/articles/detail/${item.id}`
                    class="btn btn-info"
                  ) Chi tiết

                  if(role.permissions.includes("articles_edit"))
                    a(
                      href=`${prefixAdmin}/articles/edit/${item.id}`
                      class="btn btn-warning"
                    ) Sửa

                  if(role.permissions.includes("articles_delete"))
                    button(
                      class="btn btn-danger"
                      button-delete
                      data-id=item.id
                    ) Xóa
    nav 
      +pagination(pagination)

    form(
      action=""
      method="POST"
      id="form-change-status"
      data-path=`${prefixAdmin}/articles/change-status`
    ) 

    form(
      action=""
      method="POST"
      id="form-delete-item"
      data-path=`${prefixAdmin}/articles/delete`
    ) 

    script(src="/admin/js/products.js")

          
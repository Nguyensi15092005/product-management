extends ../../layout/default.pug

block main
  if(role.permissions.includes("accounts_view"))
    if(account.avatar)
      img(src=account.avatar, alt="")
    if(account.fullName)
      div Họ và tên: <b>#{account.fullName}</b>
    if(account.email)
      div Email: <b>#{account.email}</b>
    if(account.phone)
      div Số điện thoại: <b>#{account.phone}</b>
    if(account.role_id)
      div Phân quyền: 
        each item in roles 
          if(account.role_id == item.id)
            <b>#{item.title}</b>
    if(account.status)
      div Trạng thái: 
        if(account.status == "active")
          <span class="badge badge-success">Hoạt động</span>
        else 
          <span class="badge badge-danger">Dừng hoạt động</span>
    
    if(role.permissions.includes("accounts_edit"))
      a(
        href=`${prefixAdmin}/accounts/edit/${account.id}`
        class="btn btn-warning"
      ) Chỉnh sửa

extends ../../layout/default.pug
include ../../mixin/alert.pug

block main 
  if(role.permissions.includes("accounts_edit"))
    +alert-error(5000)
    +alert-success(5000)

    h2(class="mb-4") Chỉnh sửa tài khoản 

    if(roles)
      form(
        action=`${prefixAdmin}/accounts/edit/${accounts.id}?_method=PATCH`
        id="form-edit-account"
        method="POST"
        enctype="multipart/form-data"
      ) 
        div(class="form-group")
          label(for="fullName") Họ tên *
          input(
            type="text"
            name="fullName"
            id="fullName"
            class="form-control"
            required
            value=accounts.fullName
          ) 

        div(class="form-group")
          label(for="email") Email *
          input(
            type="email"
            name="email"
            id="email"
            class="form-control"
            required
            value=accounts.email
          )

        div(class="form-group")
          label(for="password") Mật khẩu *
          input(
            type="password"
            name="password"
            id="password"
            class="form-control"
          )

        div(class="form-group")
          label(for="phone") Số điện thoại *
          input(
            type="text"
            name="phone"
            id="phone"
            class="form-control"
            required
            value=accounts.phone
          )

        div(
          class="form-group"
          upload-image
        )
          label(for="avatar") Avatar
          input(
            type="file"
            class="form-control-file"
            id="avatar"
            name="avatar"
            accept="image/*"
            upload-image-input
          )
          img(
            src=""
            class="image-preview"
            upload-image-preview
          )
          button(
            close-image
            class="close-image"
          ) x

        div(class="form-group")
          label(for="role_id") Phân quyền
          select(
            name="role_id" 
            id="role_id" 
            class="form-control"
          ) 
            option(disables) --- Chọn --- 
            each item in roles
              option(
                value=item.id
                selected=(item.id == accounts.role_id ? true: false)
              ) #{item.title}
        
        div(class="form-group form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="active"
            checked=(accounts.status=="active" ? true:false)
          )
          label(for="statusActive" class="form-check-label") Hoạt động 
        div(class="form-group form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="statusInactive"
            name="status"
            value="inactive"
            checked=(accounts.status=="inactive" ? true:false)
          )
          label(for="statusInactive" class="form-check-label") Dừng hoạt động

        div(class="form-group")
          button(
            type="submit"
            class="btn btn-primary"
          ) Cập nhật
    else 
      p Vui lòng tạo nhóm quyền trước khi Chỉnh sửa 
      a(href=`${prefixAdmin}/roles/create`) 


    


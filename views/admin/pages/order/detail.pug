extends ../../layout/default.pug
include ../../mixin/alert.pug


block main 
  +alert-success("5000")
  +alert-error("5000")
  h1 Chi tiết đơn hàng

  .card.mb-3 
    .card-header Danh sách
    .card-body
      table(
        class="table table-hover table-sm"
      )
        thead 
          tr
            th STT
            th Hình ảnh
            th Tên sản phẩm
            th Số lượng 
            th Tổng giá
        tbody
          each item, index in order
            tr 
              td #{index +1} 
              td 
                img(
                  src=item.thumbnail 
                  alt=item.title
                  width="100px" 
                  height="auto"
                )
              td #{item.title}
              td #{item.quantity}
              td #{item.priceNew}
  .row 
    .col-12.text-right
      if(role.permissions.includes("order_edit")) 
        a(
          href=`${prefixAdmin}/order/transport`
          class="btn btn-success"
        ) Gửi yêu cầu vận chuyển 
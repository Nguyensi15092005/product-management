extends ../../layout/default.pug


block main 
  if(role.permissions.includes("roles_create"))

    h2(class="mb-4") Thêm mới nhóm quyền 

    form(
      action=`${prefixAdmin}/roles/create`
      method="post"
    ) 
      div(class="form-group")
        label(for="title") Tiêu đề
        input(
          type="text"
          id="title"
          class="form-control"
          name="title"
          required
        ) 
      div(class="form-group")
        label(for="desc") Mô tả
        input(
          type="text"
          id="desc"
          class="form-control"
          name="description"
        ) 
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Tạo mới